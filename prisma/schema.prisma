generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
}

enum ProjectType {
  WEB
  MOBILE
  PACKAGE
}

model project {
    id              String          @id @default(uuid())
    title           String          @unique
    description     String      
    type            ProjectType
    tools           String[]
    url             String?
    frontendUrl     String?
    backendUrl      String?
    launchedAt      DateTime
    createdAt       DateTime        @default(now())
}

model document {
    title           String          @unique
    url             String
}
